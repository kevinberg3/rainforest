<%= form_for(@product) do |p| %>
	<div class='field'>
		<%= p.label :name %><br /> 
		<%= p.text_field :name %> 
	</div>

	<div class='field'>
		<%= p.label :description %><br />
		<%= p.text_area :description %><br /> 
	</div>

	<div class='field'>
		<%= p.label :price_in_cents %><br />
		<%= p.number_field :price_in_cents %>
	</div>

	<div class='actions'>
		<%= p.submit %>
	</div>
<% end %> 